services:
  jellyfin:
    image: lscr.io/linuxserver/jellyfin:latest
    container_name: jellyfin
    environment:
      - PUID=1000
      - PGID=1001
      - TZ={{ docker.tz }}
      # - JELLYFIN_PublishedServerUrl=http://192.168.0.5 #optional
    volumes:
      - {{ arr.jellyfin.volumes.config }}:/config
      - {{ media.tv }}:/data/tvshows
      - {{ media.movies }}:/data/movies
    ports:
      - {{ arr.jellyfin.ports.http }}:8096
      #- 8920:8920 #optional
      #- 7359:7359/udp #optional
      #- 1900:1900/udp #optional
    restart: unless-stopped
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=1000
      - PGID=1001
      - TZ={{ docker.tz }}
    volumes:
      - {{ arr.sonarr.volumes.config }}:/config
      - {{ media.tv }}:/tv #optional
      # - /path/to/downloadclient-downloads:/downloads #optional
    ports:
      - 8989:8989
    restart: unless-stopped
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=1000
      - PGID=1001
      - TZ={{ docker.tz }}
    volumes:
      - {{ arr.radarr.volumes.config }}:/config
      - {{ media.movies }}:/movies #optional
      # - /path/to/downloadclient-downloads:/downloads #optional
    ports:
      - {{ arr.radarr.ports.http }}:7878
    restart: unless-stopped
  prowlarr:
    image: lscr.io/linuxserver/prowlarr:latest
    container_name: prowlarr
    environment:
      - PUID=1000
      - PGID=1001
      - TZ={{ docker.tz }}
    volumes:
      - {{ arr.prowlarr.volumes.config }}:/config
    ports:
      - {{ arr.prowlarr.ports.http }}:9696
    restart: unless-stopped
  bazarr:
    image: lscr.io/linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID=1000
      - PGID=1001
      - TZ={{ docker.tz }}
    volumes:
      - {{ arr.bazarr.volumes.config }}:/config
      - {{ media.movies }}:/movies #optional
      - {{ media.tv }}:/tv #optional
    ports:
      - {{ arr.bazarr.ports.http }}:6767
    restart: unless-stopped
  jellyseerr:
    image: fallenbagel/jellyseerr:latest
    container_name: jellyseerr
    environment:
      - LOG_LEVEL=debug
      - TZ={{ docker.tz }}
      - PORT=5055 #optional
    ports:
      - {{ arr.jellyseerr.ports.http }}:5055
    volumes:
      - {{ arr.jellyseerr.volumes.config }}:/app/config
    restart: unless-stopped
  flaresolverr:
    image: ghcr.io/flaresolverr/flaresolverr:latest
    container_name: flaresolverr
    environment:
      - LOG_LEVEL=info
      - LOG_HTML=false
      - CAPTCHA_SOLVER=none
      - TZ={{ docker.tz }}
    ports:
      - {{ arr.flaresolverr.ports.http }}:8191
    restart: unless-stopped